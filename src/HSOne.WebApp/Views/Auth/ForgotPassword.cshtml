@{
    ViewData["Title"] = "Forgot Password";
    ViewData["Description"] = "Forgot your password? No problem!";
}
@model ForgotPasswordViewModel

<!-- Page Header-->
<header class="masthead" style="background-image: url('/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Forgot Password</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <form asp-controller="Auth" asp-action="ForgotPassword" method="post" class="row g-12 pr-10">
                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                @if (TempData[SystemConsts.FormSuccessMessage] != null)
                {
                    <div class="alert alert-success">@TempData[SystemConsts.FormSuccessMessage]</div>
                }
                <div class="col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group has-validation">
                        <input type="email" class="form-control" id="email" asp-for="Email" required>
                        <span id="validationEmail" asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>
                </div>

                <div class="col-12 my-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>